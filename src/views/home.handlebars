<div class="container">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <p style=" margin-top:1%">Welcome, <strong>{{user.firstName}} {{user.lastName}}</strong> (Role: {{user.role}})</p>
                    <p>Email: {{user.email}}</p>
                </div>
                  <div class="col text-start" style="margin-left: -50%; margin-top:2%">
                    <form action="/api/sessions/logout">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            </div>
            <h1 class="h1">Products</h1>
        </div>
    </div>
    <div class="position-absolute top-0 end-0 p-2">
        <a href="/login/profile" class="btn btn-outline-primary" style="font-size: 1.2rem;" data-bs-toggle="toast" data-bs-placement="bottom" title="Go to profile" data-bs-content="Click here to view your profile">
            <i class="fas fa-user"></i> 
        </a>
    </div>
    <div class="row">
        <div class="col-12">
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">
                    {{#if paginateInfo.hasPrevPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{paginateInfo.prevLink}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="visually-hidden">Previous</span>
                            </a>
                        </li>
                    {{/if}}

                    {{#each pages}}
                        <li class="page-item {{#if this.isActive}}active{{/if}}">
                            <a class="page-link" href="{{this.link}}">{{this.page}}</a>
                        </li>
                    {{/each}}

                    {{#if paginateInfo.hasNextPage}}
                        <li class="page-item">
                            <a class="page-link" href="{{paginateInfo.nextLink}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="visually-hidden">Next</span>
                            </a>
                        </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Code</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Category</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>{{code}}</td>
                <td>{{price}}</td>
                <td>{{#if stock}}{{stock}}{{else}}Out of stock{{/if}}</td>
                <td>{{category}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
