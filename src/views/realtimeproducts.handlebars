<div class="container">
  <h1 class="h1">Products</h1> 
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Code</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>{{code}}</td>
          <td>{{price}}</td>
          <td>{{#if stock}}{{stock}}{{else}}Out of stock{{/if}}</td> 
          <td>
            <div class="btn-group" role="group" aria-label="Product Actions">
              <button class="btn btn-outline-danger" data-product-id="delete-{{id}}" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                <i class="fas fa-trash"></i>
              </button>
            </td>
            <td>
              <button class="btn btn-outline-primary" data-product-id="add-{{id}}" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Add">
                <i class="fas fa-plus"></i>
              </button>
            </td>
          </div>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
 <script src="/socket.io/socket.io.js"></script>
