<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Welcome</h5>
                    <p class="card-text">Hello, <strong>{{ firstName }} {{ lastName }}</strong>!</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Email:</strong> {{ email }}</li>
                        <li class="list-group-item"><strong>Age:</strong> {{ age }}</li>
                        <li class="list-group-item"><strong>Role:</strong> {{ role }}</li>
                    </ul>
                    <div class="mt-3">
                        <a href="/api/sessions/logout" class="btn btn-danger">Logout</a>
                        <a href="/" class="btn btn-primary">Browse Products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
